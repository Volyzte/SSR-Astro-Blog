---
const { article } = Astro.props;
import { formatDate } from "../utils";
import type { CollectionEntry } from "astro:content";
import Tags from "../components/Tags.astro";


const oddTags = "px-2 py-1 bg-blue-500 text-white rounded-full text-xs hover:opacity-90"
const evenTags = "px-2 py-1 bg-indigo-500 text-white rounded-full text-xs hover:opacity-90"

interface Props {
  article: CollectionEntry<'blog'>;
}

---
<div class="max-w-md mx-auto mt-10">
    <div class="bg-white rounded-lg overflow-hidden shadow-lg">
    <a href={'/articles/' + article.data.slug}>
        <img src={'/images/' + article.data.image} alt="Article Image" class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"/>
    </a>
    <div class="p-6">
        <h2 class="text-2xl font-semibold mb-2">
        <a href="article.html">{article.data.title}</a>
        </h2>
        <p class="text-gray-600 text-sm mb-4">{formatDate(article.data.pubDate)}</p>
        <Tags tags={article.data.tags} />
    </div>
</div>
